{
  "version": 2,
  "name": "financial-planner-ai-agent",
  "builds": [
    {
      "src": "react_financial_ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/generate-financial-plan.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/health.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/generate-financial-plan",
      "dest": "/api/generate-financial-plan.py"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/react_financial_ui/build/static/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg))",
      "dest": "/react_financial_ui/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/react_financial_ui/build/index.html"
    }
  ],
  "env": {
    "GEMINI_API_KEY": "@gemini_api_key",
    "PYTHONPATH": "/var/task"
  },
  "functions": {
    "api/*.py": {
      "runtime": "python3.9"
    }
  },
  "regions": ["iad1"],
  "github": {
    "silent": true
  }
}
