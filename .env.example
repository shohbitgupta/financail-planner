# Financial Planner AI Agent Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Gemini API Key for AI Evaluator
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Ollama Configuration (for local LLM)
OLLAMA_HOST=localhost:11434
OLLAMA_MODEL=llama3.2

# Database Paths (auto-configured)
VECTOR_DB_PATH=./enhanced_investment_vector_db
INVESTMENT_DB_PATH=./flask_api/investment_database.db

# Flask Configuration
FLASK_ENV=production
PORT=3000

# Deployment Platform (auto-detected)
DEPLOYMENT_PLATFORM=local

# Optional: Additional API Keys
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
